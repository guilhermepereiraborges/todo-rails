<%= form_with model: [todo_list, todo_item], class: "space-y-6" do |f| %>
  <% if todo_item.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="text-red-800 font-medium">
            <%= pluralize(todo_item.errors.count, "erro encontrado", plural: "erros encontrados") %>
          </h3>
          <ul class="mt-2 list-disc list-inside text-red-700 text-sm">
            <% todo_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

# Conteúdo
  <div>
    <label for="todo_item_content" class="block text-sm font-medium text-gray-700 mb-1">
      Descrição <span class="text-red-500">*</span>
    </label>
    <%= f.text_field :content, 
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors #{todo_item.errors[:content].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : ''}",
        placeholder: "O que precisa ser feito?" %>
    <% if todo_item.errors[:content].any? %>
      <p class="mt-1 text-sm text-red-600"><%= todo_item.errors[:content].first %></p>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Data de vencimento -->
    <div>
      <label for="todo_item_due_date" class="block text-sm font-medium text-gray-700 mb-1">
        Data de vencimento
      </label>
      <%= f.date_field :due_date, 
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
      <p class="mt-1 text-sm text-gray-500">Defina um prazo para esta tarefa</p>
    </div>

    #  Prioridade
    <div>
      <label for="todo_item_priority" class="block text-sm font-medium text-gray-700 mb-1">
        Prioridade
      </label>
      <%= f.select :priority, 
          [["Baixa", "low"], ["Média", "medium"], ["Alta", "high"]], 
          {}, 
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors bg-white" %>
      <p class="mt-1 text-sm text-gray-500">Defina a importância desta tarefa</p>
    </div>
  </div>

  #  Status 
  <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
    <%= f.check_box :completed, 
        class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer" %>
    <%= f.label :completed, "Marcar como concluído", class: "text-sm font-medium text-gray-700 cursor-pointer" %>
  </div>

  #  Divisor
  <div class="border-t border-gray-200 pt-6">
    <p class="text-sm text-gray-500 mb-4">
      <span class="text-red-500">*</span> Campos obrigatórios
    </p>
  </div>

  #  Botões
  <div class="flex items-center justify-end space-x-3">
    <%= link_to "Cancelar", todo_list_path(todo_list), 
        class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors" %>
    
    <%= f.submit "Salvar Alterações", 
        class: "px-6 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors cursor-pointer shadow-sm" %>
  </div>
<% end %>
