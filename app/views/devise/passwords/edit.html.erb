<% content_for :auth_page, true %>

<div class="w-full max-w-md mx-auto px-4">
  <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
    
  # Header
    <div class="px-8 pt-8 pb-6 text-center bg-gradient-to-br from-indigo-50 to-purple-50">
        <div class="w-16 h-16 mx-auto mb-4 bg-green-100 rounded-2xl flex items-center justify-center">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900">Nova Senha</h2>
        <p class="text-gray-600 mt-1">Defina sua nova senha de acesso</p>
      </div>

      #  Form 
      <div class="p-8">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <% if resource.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <ul class="list-disc list-inside text-red-700 text-sm">
                    <% resource.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">
              Nova Senha <span class="text-red-500">*</span>
            </label>
            <%= f.password_field :password, 
                autofocus: true, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                placeholder: "••••••••" %>
            <p class="mt-1 text-xs text-gray-500">Mínimo de <%= @minimum_password_length %> caracteres</p>
          </div>

          <div>
            <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">
              Confirmar Nova Senha <span class="text-red-500">*</span>
            </label>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                placeholder: "••••••••" %>
          </div>

          <div>
            <%= f.submit "Alterar Senha", class: "w-full py-3 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors cursor-pointer shadow-sm" %>
          </div>
        <% end %>

        #  Links 
        <div class="mt-6 text-center space-y-2">
          <p class="text-sm text-gray-600">
            <%= link_to "← Voltar para login", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-800 transition-colors" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
